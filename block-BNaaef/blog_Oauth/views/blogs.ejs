<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!--Title-->
    <title>List Of Blogs | Blogs</title>
    <!--Stylesheet-->
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <!--Google Fonts-->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Tangerine:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200;0,300;0,400;0,600;0,700;0,800;0,900;1,200;1,300;1,400;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <!--Font Awesome-->
    <script
      src="https://kit.fontawesome.com/5cc6fb9f6b.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <!--Header-->
    <header>
      <div class="container flex justify-between align-center">
        <a class="logo" href="/"> <span>B</span>logs</a>

        <% if(user){ %>
        <nav class="flex justify-between align-end">
          <a class="user" href="/blogs/dashBoard"><%= user.name %></a>
          <a style="margin-right: 0.5rem" href="/"
            ><button class="btn btn-primary">Go Back</button></a
          >
          <a href="/users/logout"
            ><button class="btn btn-primary">Log Out</button></a
          >
        </nav>
        <% }else{ %>
         <div
          style="padding: 1rem; padding-bottom: 2rem"
          class="flec justify-between align-center"
        >
          <a
            class="btn btn-primary"
            style="margin: 0.5rem"
            href="/users/auth/google"
            >Login with google <i style="background-color: white; padding: 0.2rem; border-radius: 50%;" class="fab fa-google"></i
          ></a>
          <a
            class="btn btn-primary"
            style="margin: 0.5rem"
            href="/users/auth/github"
            >Login with github <i style="background-color: white; padding: 0.2rem; border-radius: 50%;" class="fab fa-github"></i
          ></a>
        </div>
        <% } %>
      </div>
    </header>
    <!--Main-->
    <main class="blogs container">
      <section class="addBlog flex justify-around align-center">
        <a href="/blogs/new">
          <div><i class="far fa-plus-square"></i> Add Blog</div>
        </a>
      </section>

      <section class="blogsList flex justify-center align-start flex-column">
        <% if(blogs.length){ blogs.forEach(blog=>{ %>
        <article class="blog">
          <h2><%= blog.title %></h2>
          <cite>~<%= blog.author.name %> </cite>
          <p><%= blog.description.substr(0,200) %>...</p>
          <a href="/blogs/<%= blog._id %>">
            <button class="btn btn-primary">Read</button>
          </a>
        </article>
        <% }); }else{ %>
        <h2 style="text-align: center; width: 100%; margin-top: 1rem">
          No Blogs Yet
        </h2>
        <% } %>
      </section>
    </main>
  </body>
</html>